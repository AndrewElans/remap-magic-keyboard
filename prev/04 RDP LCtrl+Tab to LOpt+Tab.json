{
    "description": "RDP LCtrl+Tab to LOpt+Tab",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.microsoft\\.rdc\\.macos$",
                        "^com\\.microsoft\\.rdc\\.osx\\.beta$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "tab",
                "modifiers": { "mandatory": ["left_control"] }
            },
            "to": [
                {
                    "key_code": "tab",
                    "modifiers": ["left_option"]
                }
            ],
            "type": "basic"
        }
    ]
}